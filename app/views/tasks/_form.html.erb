<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |task| %>
          <li><%= task %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <p><%= f.label :status, 'ステータス' %>
  <%= f.text_field :status %></p>

  <p><%= f.label :content, 'タスクリスト' %>
  <%= f.text_field :content %></p>

  <%= f.submit '追加' %>
<% end %>